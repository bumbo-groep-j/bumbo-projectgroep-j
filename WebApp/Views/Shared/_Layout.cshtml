<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bumbo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/manager.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bumbo.styles.css" asp-append-version="true" />
    @if(ViewData.ContainsKey("Stylesheet"))
    {
        <link rel="stylesheet" href="@ViewData["Stylesheet"]" asp-append-version="true" />
    }
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 navbar-desktop">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Bumbo</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Manager" asp-action="Scheduling">Inroostering</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Manager" asp-action="Prognosis">Prognose</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Manager" asp-action="WorkedHours">Uren verlonen</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Manager" asp-action="LeaveRequests">Verlofaanvragen</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="WorkSchedule">Werkrooster</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="SchoolSchedule">Schoolrooster</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Availability">Beschikbaarheid</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="RequestLeave">Verlof</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Login">TempViewLogin</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted footer-desktop">
        <div class="container">
            &copy; 2022 - Bumbo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <footer class="border-top footer text-muted footer-mobile">
        <div class="container-fluid">
            <ul class="d-flex  flex-row flex align-content-between">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="WorkSchedule">
                        <ul class="d-flex flex-column align-content-center">
                            <li class="nav-item  align-self-center">
                                <img class="footer-img" src="~/images/schedule_icon.png"/>
                            </li>
                            <li class="nav-item  align-self-center">
                                Rooster
                            </li>
                        </ul>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Availability">
                        <ul class="d-flex flex-column align-content-center">
                            <li class="nav-item  align-self-center">
                                <img class="footer-img" src="~/images/availability_icon.png" />
                            </li>
                            <li class="nav-item  align-self-center">
                                Beschikbaarheid
                            </li>
                        </ul>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="LeaveRequests">
                        <ul class="d-flex flex-column align-content-center">
                            <li class="nav-item  align-self-center">
                                <img class="footer-img" src="~/images/moon_icon.png" />
                            </li>
                            <li class="nav-item  align-self-center">
                                Verlof
                            </li>
                        </ul>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="SchoolSchedule">
                        <ul class="d-flex flex-column align-content-center">
                            <li class="nav-item  align-self-center">
                                <img class="footer-img" src="~/images/school_icon.png" />
                            </li>
                            <li class="nav-item  align-self-center">
                                Schoolrooster
                            </li>
                        </ul>
                    </a>
                </li>
            </ul>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

