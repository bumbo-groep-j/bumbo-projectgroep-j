<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bumbo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bumbo.styles.css" asp-append-version="true" />
    @if (ViewData.ContainsKey("Stylesheet"))
    {
        <link rel="stylesheet" href="@ViewData["Stylesheet"]" asp-append-version="true" />
    }
</head>
<body>
    @if (ViewData.ContainsKey("IsMobile"))
    {
        <a asp-action="DisableMobile" class="disable_mobile">Desktop page</a>
        <main>
            <footer>
                <partial name="_LinksPartial" />
            </footer>
            @RenderBody()
        </main>
        <div class="watermark_concept">
            <p class="concept_text">CONCEPT</p>
        </div>
    }
    else
    {
        if(!ViewData.ContainsKey("HideNavBar"))
        {
            <header>
                <nav>
                    <partial name="_LinksPartial" />
                </nav>
            </header>
        }
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>