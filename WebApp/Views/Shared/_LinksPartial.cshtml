@using Microsoft.AspNetCore.Identity
@using WebApp.Domain;
@inject SignInManager<Account> SignInManager

@if(SignInManager.IsSignedIn(User))
{
    @if(User.IsInRole("Manager")) {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Manager" asp-action="Scheduling">Inroostering</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Manager" asp-action="Prognosis">Prognose</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Manager" asp-action="WorkedHours">Uren verlonen</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Manager" asp-action="LeaveRequests">Verlofaanvragen</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Manager" asp-action="ListEmployees">Medewerkers</a>
        </li>
        <li class="nav-item"><p class="nav-link text-dark">Hallo <span class="manager_color">@User.Identity.Name</span>!</p></li>
    }
    else if(User.IsInRole("Employee"))
    {
        <div>
            <a asp-controller="Employee" asp-action="WorkSchedule">
                @if(ViewData["Title"] == "Rooster")
                {
                    <img src="/img/schedule_selected.svg" />
                    <p class="selected">Rooster</p>
                }
                else
                {
                    <img src="/img/schedule.svg" />
                    <p class="unselected">Rooster</p>
                }
            </a>
        </div>
        <div>
            <a asp-controller="Employee" asp-action="Availability">
                @if(ViewData["Title"] == "Beschikbaarheid")
                {
                    <img src="/img/availability_selected.svg" />
                    <p class="selected">Beschikbaarheid</p>
                }
                else
                {
                    <img src="/img/availability.svg" />
                    <p class="unselected">Beschikbaarheid</p>
                }
            </a>
        </div>
        <div>
            <a asp-controller="Employee" asp-action="LeaveRequests">
                @if(ViewData["Title"] == "Verlof")
                {
                    <img src="/img/vacation_selected.svg" />
                    <p class="selected">Verlof</p>
                }
                else
                {
                    <img src="/img/vacation.svg" />
                    <p class="unselected">Verlof</p>
                }
            </a>
        </div>
        <div>
            <a asp-controller="Employee" asp-action="SchoolSchedule">
                @if(ViewData["Title"] == "Schoolrooster")
                {
                    <img src="/img/school_selected.svg" />
                    <p class="selected">Schoolrooster</p>
                }
                else
                {
                    <img src="/img/school.svg" />
                    <p class="unselected">Schoolrooster</p>
                }
            </a>
        </div>
        @if(!ViewData.ContainsKey("IsMobile"))
        {
            <div class="end-of-page-links">
                @if (User.IsInRole("Employee"))
                {
                    <a asp-controller="Employee" asp-action="EnableMobile">Naar mobiele pagina</a>
                    <br />
                    <br />
                }
                <a asp-controller="Account" asp-action="Logout">Uitloggen</a>
            </div>
        }
    }
}
else if (!ViewData.ContainsKey("IsMobile"))
{
    <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Inloggen</a>
}
