@{
    ViewData["Title"] = "rooster";
    ViewData["Stylesheet"] = "/css/employee.css";
}

<div class="modal-body">
    <div id="title">
        <h1>
            <button asp-action="PreviousDate" class="pre_next_input" size="20"><span class="btn_text">&#x2039</span></button>
            <span class="header_date_span">
                ROOSTER:
                @ViewBag.StartDate.ToString("dddd dd MMMM")
                -
                @ViewBag.EndDate.ToString("dddd dd MMMM")
            </span>
            <button asp-action="NextDate" class="pre_next_input"><span class="btn_text">&#x203A</span></button>
        </h1>
    </div>
    <br />
    <table class="container">
        <tr class="row_hour">
            <td></td>
            <td></td>
            <td>07:00</td>
            <td>08:00</td>
            <td>09:00</td>
            <td>10:00</td>
            <td>11:00</td>
            <td>12:00</td>
            <td>13:00</td>
            <td>14:00</td>
            <td>15:00</td>
            <td>16:00</td>
            <td>17:00</td>
            <td>18:00</td>
            <td>19:00</td>
            <td>20:00</td>
            <td>21:00</td>
            <td style="color:white; font-size:0">00:00</td>
        </tr>
        <br>
        @foreach (var item in ViewBag.DaysThisWeek)
        {   
             <tr>
                <td class="day_div"><b>@item.ToString("dddd").Substring(0,1).ToUpper()@item.ToString("dddd").Substring(1, item.ToString("dddd").Length -1)</b></td>
                <td>@item.ToString("dd")</td>
                @switch(@item.ToString("dddd")){
                    case "maandag":
                        <td class="length_hour" colspan="15">
                            <div style="background-color: #007AFF; color: white; ;padding: 5px; width: 530px; margin-left: 90px; height: 32px">
                                <span>08:00</span>
                                <span style="float: right">16:00</span>
                            </div>
                        </td>
                        <td>09:00</td>
                        break;
                    case "dinsdag":
                        <td class="length_hour" colspan="15">
                            <div style="background-color: #007AFF; color: white; ;padding: 5px; width: 530px; margin-left: 155px; height: 32px">
                                <span>09:00</span>
                                <span style="float: right">17:00</span>
                            </div>
                        </td>
                        <td>08:00</td>
                        break;
                    case "woensdag":
                        <td class="length_hour" colspan="15">
                           
                        </td>
                        <td>00:00</td>
                        break;
                    case "donderdag":
                        <td class="length_hour" colspan="15">
                            
                        </td>
                        <td>00:00</td>
                        break;
                    case "vrijdag":
                        <td class="length_hour" colspan="15">
                            <div style="background-color: #007AFF; color: white; ;padding: 5px; width: 330px; margin-left: 90px; height: 32px">
                                <span>08:00</span>
                                <span style="float: right">13:00</span>
                            </div>
                        </td>
                        <td>05:00</td>
                        break;
                    case "zaterdag":
                        <td class="length_hour" colspan="15">
                           
                        </td>
                        <td>00:00</td>
                        break;
                    case "zondag":
                        <td class="length_hour" colspan="15">
                         
                        </td>
                        <td>00:00</td>
                        break;
                }
                
            </tr>
        }
    </table>
</div>
