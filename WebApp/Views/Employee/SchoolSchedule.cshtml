@{
    ViewData["Title"] = "Schoolrooster";
    ViewData["Stylesheet"] = "/css/employee.css";
}

<div class="modal-body">
    <div class="align-items-center" id="title">
        <h1 class="text-center">Schoolrooster</h1>
    </div>
    <br />
    <div class="watermark_concept">
        <p class="concept_text">CONCEPT</p>
    </div>
    <table class="container table_style">
        <tr >
            <td></td>
            <td>Afdeling</td>
            <td>07:00</td>
            <td>08:00</td>
            <td>09:00</td>
            <td>10:00</td>
            <td>11:00</td>
            <td>12:00</td>
            <td>13:00</td>
            <td>14:00</td>
            <td>15:00</td>
            <td>16:00</td>
            <td>17:00</td>
            <td>18:00</td>
            <td>19:00</td>
            <td>20:00</td>
            <td>21:00</td>
            <td style="color:white; font-size:0">00:00</td>
        </tr>
        @foreach (var item in ViewData["Days"] as List<string>)
        {
            <tr>
                <td class="day_div"><b>@item</b></td>
               
                @switch (@item)
                {
                    case "Maandag":
                        <td></td>
                        <td class="length_hour" colspan="15">
                            <div class="work_line" style="width: 490px; margin-left: 80px;">
                                <span>08:00</span>
                                <span style="float: right">16:00</span>
                            </div>
                        </td>
                        <td class="extra_info">8:00 <button class="edit_button">Edit</button></td>               
                        break;
                    case "Dinsdag":
                        <td></td>
                        <td class="length_hour" colspan="15">
                            <div class="work_line" style=";width: 490px; margin-left: 140px;">
                                <span>09:00</span>
                                <span style="float: right">17:00</span>
                            </div>
                        </td>
                        <td class="extra_info">8:00 <button class="edit_button">Edit</button></td>
                        break;
                    case "Woensdag":
                        <td>Kassa</td>
                        <td class="length_hour" colspan="15">
                        </td>
                        <td class="extra_info">0:00 <button class="edit_button">Edit</button></td>
                        break;
                    case "Donderdag":
                        <td>VKK</td>
                        <td class="length_hour" colspan="15">
                        </td>
                        <td class="extra_info">0:00 <button class="edit_button">Edit</button></td>
                        break;
                    case "Vrijdag":
                        <td></td>
                        <td class="length_hour" colspan="15">
                            <div class="work_line" style="width: 310px; margin-left: 80px;">
                                <span>08:00</span>
                                <span style="float: right">13:00 </span>
                            </div>
                        </td>
                        <td class="extra_info">5:00 <button class="edit_button">Edit</button></td>
                        break;
                    case "Zaterdag":
                        <td>Vers</td>
                        <td class="length_hour" colspan="15">
                        </td>
                        <td class="extra_info">0:00 <button class="edit_button">Edit</button></td>
                        break;
                    case "Zondag":
                        <td></td>
                        <td class="length_hour" colspan="15">
                        </td>
                        <td class="extra_info">0:00 <button class="edit_button">Edit</button></td>
                        break;
                }

            </tr>
        }
    </table>
    <div class="space_around">
        <button asp-action="DeleteAll">Verwijder Alles</button>
    </div>
</div>