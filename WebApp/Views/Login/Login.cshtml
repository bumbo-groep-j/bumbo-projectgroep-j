@model WebApp.Domain.Account
@{
    ViewData["Title"] = "Login";
}
<!--Getting CSS file-->
<link rel="stylesheet" type="text/css" href="~/css/login.css">


	<div class= "login-group">

		<!--Needed to format everything-->
		@using(Html.BeginForm("Verify", "Login", FormMethod.Post))
		{
			<h1 style="text-align:center">Inloggen</h1>

			<div class="login-InputBars">
				<p>
					@Html.EditorFor(model => model.Username, 
					new { htmlAttributes = new { @class = "form-control", @placeholder = "Gebruikersnaam" } })
				</p>
				<p>@Html.ValidationMessageFor(model => model.Username)</p>
				<p>
					@Html.EditorFor(model => model.Password, 
					new { htmlAttributes = new { @class = "form-control", @placeholder = "Wachtwoord" } })
				</p>
				<p>@Html.ValidationMessageFor(model => model.Password)</p>
			</div>

			<div class="loginButton">
				<input type="submit" name="name" value="Inloggen" />
			</div>
		}
	</div>
