@model WebApp.Domain.Account
@{
	ViewData["Title"] = "Login";
	ViewData["Stylesheet"] = "/css/login.css";
}
<div class="login_group">
	<form asp-action="Login">
		<h1 style="text-align:center">Inloggen</h1>
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="login_input_bars">
			<p>
				<input asp-for="Username" class="form-control" placeholder="Gebruikersnaam" />
				<span asp-validation-for="Username" class="text-danger"></span>
			</p>
			<p>
				<input asp-for="Password" class="form-control" placeholder="Wachtwoord" type="password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</p>
		</div>
		<div class="login_button">
			<input type="submit" value="Inloggen" />
		</div>
	</form>
</div>
